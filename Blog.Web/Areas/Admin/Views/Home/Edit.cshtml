@model Blog.Web.Areas.Admin.Models.EditPostModel

<link rel="stylesheet" href="/styles/bo.css" asp-append-version="true" />
<link rel="stylesheet" href="/styles/editor.css" asp-append-version="true" />

@Html.ActionLink("<- Retour à la liste", "List")

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)

    <label for="title">
        <span>Titre :</span>
        @Html.TextBoxFor(m => m.Title)
    </label>

    <label for="url">
        <span>Url :</span>
        @Html.TextBoxFor(m => m.Url)
    </label>

    <div class="row">
        <label for="category">
            <span>Categorie :</span>
            @Html.DropDownListFor(m => m.CategoryCode, Model.Categories.Select(c => new SelectListItem { Text = c.Name, Value = c.Code }))
        </label>

        <label for="publicationDate">
            <span>Date de publication :</span>
            @Html.TextBoxFor(m => m.PublicationDate)
        </label>
    </div>

    <label for="tags">
        <span>Tags :</span>
        @Html.TextBoxFor(m => m.Tags)
    </label>


    <label>Contenu :</label>
    <div class="editor">
        @Html.TextAreaFor(m => m.Markdown, 0, 0, new { @class = "md-editor" })

        <div class="post">
            <div class="postdata"></div>
        </div>
    </div>

    @Html.HiddenFor(m => m.Content)

    <input class="floating-btn small" type="submit" value="Ok" />
}

<script src="~/scripts/showdown.min.js" type="text/javascript"></script>
<script src="~/scripts/pikaday.js" type="text/javascript"></script>
<script src="~/scripts/editor.js" type="text/javascript"></script>
