@model Blog.Data.Post

@{ 
    var postUrl = Url.Action("Post", "Blog", new { categoryCode = Model.Category.Code, postUrl = Model.Url }, this.Context.Request.IsHttps ? "https" : "http");
}

<div class="mentions">
    <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="SebastienOll" data-text="@Model.Title" data-url="@postUrl">Tweet</a>
    <div class="g-plusone" data-size="medium" data-href="@postUrl" data-count="true"></div>
    <div class="fb-like" data-href="@postUrl" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
</div>
